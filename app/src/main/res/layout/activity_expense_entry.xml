<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ExpenseEntryActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Headline -->
        <TextView
            android:id="@+id/textViewHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Select Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CalendarView
            android:id="@+id/calendarViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Date:"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Start Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Start Time:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HH:mm"
            android:inputType="time"
            android:layout_marginBottom="24dp" />

        <!-- End Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select End Time:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HH:mm"
            android:inputType="time"
            android:layout_marginBottom="24dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Description"
            android:layout_marginBottom="16dp" />

        <!-- Category -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Photo Preview -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo Preview:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_launcher_background" />

        <!-- Attach Photo -->
        <Button
            android:id="@+id/buttonAttachPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attach Photo"
            android:layout_marginBottom="24dp" />

        <!-- Goals -->
        <EditText
            android:id="@+id/editTextMinGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Monthly Goal"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextMaxGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum Monthly Goal"
            android:inputType="numberDecimal"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Entry"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
